{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "definitions": {
        "Name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9_]*[a-zA-Z0-9])?$"
        },
        "Value64": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 18446744073709551615
                },
                {
                    "type": "string",
                    "enum": [
                        "usize_max",
                        "uint32_max",
                        "uint64_max"
                    ]
                }
            ]
        },
        "Value16": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535
        },
        "Type": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": [
                        "c_void",
                        "bool",
                        "string",
                        "uint16",
                        "uint32",
                        "uint64",
                        "usize",
                        "int16",
                        "int32",
                        "float32",
                        "float64",
                        "array<bool>",
                        "array<string>",
                        "array<uint16>",
                        "array<uint32>",
                        "array<uint64>",
                        "array<usize>",
                        "array<int16>",
                        "array<int32>",
                        "array<float32>",
                        "array<float64>"
                    ]
                },
                {
                    "type": "string",
                    "pattern": "^(array<)?(enum\\.|bitflag\\.|struct\\.|function_type\\.|object\\.)([a-zA-Z0-9]([a-zA-Z0-9_]*[a-zA-Z0-9])?)(>)?$"
                }
            ]
        },
        "Pointer": {
            "type": "string",
            "enum": [
                "immutable",
                "mutable"
            ]
        },
        "ParameterType": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/Name",
                    "description": "Parameter name"
                },
                "doc": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/definitions/Type",
                    "description": "Parameter type"
                },
                "pointer": {
                    "$ref": "#/definitions/Pointer",
                    "description": "Optional property, specifies if a parameter type is a pointer"
                },
                "optional": {
                    "type": "boolean",
                    "description": "Optional property, to indicate if a parameter is optional"
                }
            },
            "required": [
                "name",
                "doc",
                "type"
            ]
        },
        "Function": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/Name",
                    "description": "Name of the function"
                },
                "doc": {
                    "type": "string"
                },
                "returns": {
                    "type": "object",
                    "properties": {
                        "doc": {
                            "type": "string"
                        },
                        "type": {
                            "$ref": "#/definitions/Type",
                            "description": "Return type of the function"
                        },
                        "pointer": {
                            "$ref": "#/definitions/Pointer",
                            "description": "Optional property, specifies if a method return type is a pointer"
                        }
                    },
                    "required": [
                        "doc",
                        "type"
                    ]
                },
                "returns_async": {
                    "type": "array",
                    "description": "List of async callback arguments",
                    "items": {
                        "$ref": "#/definitions/ParameterType"
                    }
                },
                "args": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ParameterType"
                    }
                }
            },
            "required": [
                "name",
                "doc"
            ]
        }
    },
    "properties": {
        "copyright": {
            "type": "string",
            "description": "The license string to include at the top of the generated header"
        },
        "enum_prefix": {
            "type": "string",
            "pattern": "^0x[0-9]{4}$",
            "description": "The dedicated enum prefix for the implementation specific header to avoid collisions"
        },
        "constants": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/Name",
                        "description": "Name of the constant variable/define"
                    },
                    "value": {
                        "$ref": "#/definitions/Value64",
                        "description": "An enum of predefined max constants or a 64-bit unsigned integer"
                    },
                    "doc": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "value",
                    "doc"
                ]
            }
        },
        "enums": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/Name",
                        "description": "Name of the enum"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "entries": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/Name",
                                    "description": "Name of the enum entry"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "value": {
                                    "$ref": "#/definitions/Value16",
                                    "description": "Optional property, a 16-bit unsigned integer"
                                }
                            },
                            "required": [
                                "name",
                                "doc"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "doc"
                ]
            }
        },
        "bitflags": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/Name",
                        "description": "Name of the bitflag"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "entries": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/Name",
                                    "description": "Name of the bitflag entry"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "value": {
                                    "$ref": "#/definitions/Value64",
                                    "description": "Optional property, a 64-bit unsigned integer"
                                },
                                "value_combination": {
                                    "type": "array",
                                    "description": "Optional property, an array listing the names of bitflag entries to be OR-ed",
                                    "items": {
                                        "$ref": "#/definitions/Name"
                                    }
                                }
                            },
                            "required": [
                                "name",
                                "doc"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "doc"
                ]
            }
        },
        "function_types": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Function"
            }
        },
        "structs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/Name",
                        "description": "Name of the structure"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "description": "Type of the structure",
                        "enum": [
                            "base_in",
                            "base_out",
                            "extension_in",
                            "extension_out",
                            "standalone"
                        ]
                    },
                    "extends": {
                        "type": "array",
                        "description": "Optional property, list of names of the structs that this extension structure extends",
                        "items": {
                            "type": "string"
                        }
                    },
                    "free_members": {
                        "type": "boolean",
                        "description": "Optional property, to indicate if a free members function be emitted for the struct"
                    },
                    "members": {
                        "type": "array",
                        "description": "Optional property, list of struct members",
                        "items": {
                            "$ref": "#/definitions/ParameterType"
                        }
                    }
                },
                "required": [
                    "name",
                    "doc",
                    "type"
                ]
            }
        },
        "functions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Function"
            }
        },
        "objects": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/Name",
                        "description": "Name of the object"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "methods": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/Function"
                        }
                    }
                }
            }
        }
    },
    "required": [
        "copyright",
        "enum_prefix",
        "constants",
        "enums",
        "bitflags",
        "function_types",
        "structs",
        "functions",
        "objects"
    ]
}