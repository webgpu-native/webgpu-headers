{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "copyright": {
            "type": "string",
            "description": "The license string to include at the top of the generated header"
        },
        "enum_prefix": {
            "type": "string",
            "description": "The dedicated enum prefix for the implementation specific header to avoid collisions"
        },
        "constants": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the constant variable/define"
                    },
                    "value": {
                        "type": "string",
                        "description": "An unsigned integer in decimal or hexadecimal syntax, in string"
                    },
                    "doc": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "value",
                    "doc"
                ]
            }
        },
        "enums": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the enum"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "entries": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the enum entry"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string",
                                    "description": "Optional property, a 16-bit unsigned integer in string"
                                }
                            },
                            "required": [
                                "name",
                                "doc"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "doc"
                ]
            }
        },
        "bitflags": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the bitflag"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "entries": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the bitflag entry"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string",
                                    "description": "Optional property, a 64-bit unsigned integer in string"
                                },
                                "value_combination": {
                                    "type": "array",
                                    "description": "Optional property, an array listing the names of bitflag entries to be OR-ed",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "required": [
                                "name",
                                "doc"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "doc"
                ]
            }
        },
        "function_types": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the function typedef"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "returns": {
                        "type": "object",
                        "description": "Optional property, describing the return type of the function",
                        "properties": {
                            "doc": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "description": "Return type of the function"
                            }
                        },
                        "required": [
                            "doc",
                            "type"
                        ]
                    },
                    "args": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "description": "Optional property, list of arguments to the function",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Argument name"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "description": "Argument type"
                                },
                                "pointer": {
                                    "type": "string",
                                    "description": "Optional property, specifies if a function argument type is a pointer",
                                    "enum": [
                                        "immutable",
                                        "mutable"
                                    ]
                                },
                                "optional": {
                                    "type": "boolean",
                                    "description": "Optional property, to indicate if a function argument is optional"
                                }
                            },
                            "required": [
                                "name",
                                "doc",
                                "type"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "doc"
                ]
            }
        },
        "structs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the structure"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "description": "Type of the structure",
                        "enum": [
                            "base_in",
                            "base_out",
                            "extension_in",
                            "extension_out",
                            "standalone"
                        ]
                    },
                    "members": {
                        "type": "array",
                        "description": "Optional property, list of struct members",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the struct member"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "description": "Type of the struct member"
                                },
                                "pointer": {
                                    "type": "string",
                                    "description": "Optional property, specifies if a struct member type is a pointer",
                                    "enum": [
                                        "immutable",
                                        "mutable"
                                    ]
                                },
                                "optional": {
                                    "type": "boolean",
                                    "description": "Optional property, to indicate if a struct member is optional"
                                }
                            },
                            "required": [
                                "name",
                                "doc",
                                "type"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "doc",
                    "type"
                ]
            }
        },
        "functions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the function"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "returns": {
                        "type": "object",
                        "description": "Optional property, describing the return type of the function",
                        "properties": {
                            "doc": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "description": "Return type of the function"
                            }
                        },
                        "required": [
                            "doc",
                            "type"
                        ]
                    },
                    "args": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the function argument"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "pointer": {
                                    "type": "string",
                                    "description": "Optional property, specifies if a function argument type is a pointer",
                                    "enum": [
                                        "immutable",
                                        "mutable"
                                    ]
                                },
                                "optional": {
                                    "type": "boolean",
                                    "description": "Optional property, to indicate if a function argument is optional"
                                }
                            },
                            "required": [
                                "name",
                                "doc"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "doc"
                ]
            }
        },
        "objects": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the object"
                    },
                    "doc": {
                        "type": "string"
                    },
                    "methods": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the method for an object"
                                },
                                "doc": {
                                    "type": "string"
                                },
                                "returns": {
                                    "type": "object",
                                    "properties": {
                                        "doc": {
                                            "type": "string"
                                        },
                                        "type": {
                                            "type": "string",
                                            "description": "Return type of the function"
                                        }
                                    },
                                    "required": [
                                        "doc",
                                        "type"
                                    ]
                                },
                                "args": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "description": "Name of the method argument"
                                            },
                                            "doc": {
                                                "type": "string"
                                            },
                                            "pointer": {
                                                "type": "string",
                                                "description": "Optional property, specifies if a method argument type is a pointer",
                                                "enum": [
                                                    "immutable",
                                                    "mutable"
                                                ]
                                            },
                                            "optional": {
                                                "type": "boolean",
                                                "description": "Optional property, to indicate if a method argument is optional"
                                            }
                                        },
                                        "required": [
                                            "name",
                                            "doc"
                                        ]
                                    }
                                }
                            },
                            "required": [
                                "name",
                                "doc"
                            ]
                        }
                    }
                }
            }
        }
    },
    "required": [
        "copyright",
        "enum_prefix",
        "constants",
        "enums",
        "bitflags",
        "function_types",
        "structs",
        "functions",
        "objects"
    ]
}